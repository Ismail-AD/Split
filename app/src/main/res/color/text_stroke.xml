<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:color="@color/white" android:state_focused="true"/>
    <!-- Error state -->
    <item android:color="@color/red" android:state_enabled="true" />
    <!-- Disabled state -->
    <item android:color="@color/grey" android:state_enabled="false"/>
    <!-- Default/Unfocused state -->
    <item android:color="@color/grey"/>
</selector>