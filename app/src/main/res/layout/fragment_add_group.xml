<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".UI.Fragment.AddGroupFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/closeIcon"
            style="@style/iconTintColor"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/cross" />

        <TextView
            android:id="@+id/titleTextView"
            style="@style/billWordColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:text="Create a group"

            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/saveGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"

            android:text="Done"
            android:textColor="@color/teal_700"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addGroupImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop"
            android:src="@drawable/addimage" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etSignUpUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Group name"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/green_2" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/typeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Type"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/_7sdp"
        android:gravity="end"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/chipTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/chip_background_selector"
            android:drawableStart="@drawable/airplane"
            android:drawablePadding="4dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Trip"
            android:textColor="@drawable/chip_text_selector"
            app:drawableTint="@drawable/chip_icon_selector"
            android:textSize="14sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/chipHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/chip_background_selector"
            android:drawableStart="@drawable/home"
            android:drawablePadding="4dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Home"
            android:textColor="@drawable/chip_text_selector"
            app:drawableTint="@drawable/chip_icon_selector"
            android:textSize="14sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/chipCouple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chip_background_selector"
            android:drawableStart="@drawable/love"
            android:drawablePadding="4dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Couple"
            android:textColor="@drawable/chip_text_selector"
            app:drawableTint="@drawable/chip_icon_selector"
            android:textSize="14sp"
            android:gravity="center_vertical"/>

    </LinearLayout>
</LinearLayout>
